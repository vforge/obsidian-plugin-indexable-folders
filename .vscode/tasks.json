{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Node.js Environment",
            "type": "shell",
            "command": "./.vscode/setup-node.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pnpm",
            "args": ["install"],
            "group": "build",
            "dependsOn": "Setup Node.js Environment",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "pnpm",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Setup Node.js Environment",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pnpm",
            "args": ["test:run"],
            "group": "test",
            "dependsOn": "Setup Node.js Environment",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "pnpm",
            "args": ["test:coverage"],
            "group": "test",
            "dependsOn": "Setup Node.js Environment",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
