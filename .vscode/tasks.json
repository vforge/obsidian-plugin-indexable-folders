{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Node.js Environment",
            "type": "shell",
            "command": "./.vscode/setup-node.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "install"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "test:run"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "test:coverage"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Vitest: coverage UI",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "test:ui:coverage"],
            "group": "test",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "pnpm: lint",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["pnpm", "run", "lint"],
            "problemMatcher": ["$eslint-compact"],
            "group": "build"
        },
        {
            "label": "release: dry-run",
            "type": "shell",
            "command": "./.vscode/run-with-node.sh",
            "args": ["./scripts/release.sh", "--dry-run"],
            "problemMatcher": [],
            "presentation": { "reveal": "always" }
        }
    ]
}
